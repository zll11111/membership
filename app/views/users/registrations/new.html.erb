<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_name, required: true,hint:"大小写字母或是数字", autofocus: true ,validate: true%>
    <%= f.input :email, required: true ,:validate => true%>
    <%= f.input :password, required: true, hint: ("设置至少#{@minimum_password_length}个字符 " if @validatable) %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t("signup") ,class: "btn btn-primary",data:{disable_with:"正在注册..."}%>
  </div>
<% end %>

<%= render "users/shared/links" %>
<script src="judge.js"></script>
